<% if logged_in? %>
  <p>ユーザ: <%= current_user.name %></p>

  <h3>タスク入力</h3>

  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post Task', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ようこそタスク管理アプリへ</h1>
      <%= link_to 'ログイン', login_path, class: "btn btn-lg btn-primary" %>
      <%= link_to '新規登録こちら!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
